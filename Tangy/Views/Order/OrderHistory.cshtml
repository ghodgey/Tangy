@model Tangy.Models.OrderDetailsViewModels.OrderListViewModel


@{
    ViewData["Title"] = "OrderHistory";
}

<h2>Order History</h2>
<br />

@if(Model.Orders.Count > 0)
{
    @foreach(var item in Model.Orders)
    {
        @Html.Partial("_IndividualOrder", item)

    }

}
else
{
    <p>No past orders available...</p>

}

<br />
@*In PageLinkTagHelpers.cs we defined the target model as a div with attribute page-model. All attributes defined in this class*@
<div page-model="@Model.PagingInfo" page-action="OrderHistory" page-classes-enabled="true" page-class="btn border" 
     page-class-normal="btn btn-default active" page-class-selected="btn btn-primary active" class="btn-group m-1"></div>

<br />