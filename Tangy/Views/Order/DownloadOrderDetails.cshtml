
@{
    ViewData["Title"] = "DownloadOrderDetails";
}

<h2>Download Order Details</h2>
<br />

<form method="get">
    <div class="container border p-3">
        <h3>Select Date Range</h3>
        <div class="row">
            <div class="col-4">
                <label class="custom-label">Start Date</label>
            </div>
            <div class="col-4">
                @Html.Editor("startDate", new { htmlAttributes = new { @id = "datePickerStart", @class = "form-control" } })
            </div>
            <div class="col-4"></div>
        </div>
        <div class="row">
            <div class="col-4">
                <label class="custom-label">End Date</label>
            </div>
            <div class="col-4">
                @Html.Editor("endDate", new { htmlAttributes = new { @id = "datePickerEnd", @class = "form-control" } })
            </div>
            <div class="col-4"></div>
        </div>
    </div>
    <br />
    <button type="submit" class="btn btn-outline-primary">Download Order Details</button>




</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script type="text/javascript">
        $(function () {
            $("#datePickerStart").datepicker({
                defaultDate: "+1w",
                changeMonth: true,
                changeYear: true
            })
        });

        $(function () {
            $("#datePickerEnd").datepicker({
                defaultDate: "+1w",
                changeMonth: true,
                changeYear: true
            })
        });


    </script>

}